{
  "name": "TaskMate Full Stack Development",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "docker-compose.devcontainer.yml"
  ],
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",

  // Forward ports for all services
  "forwardPorts": [
    5432,
    6379,
    8007,
    8099,
    5173
  ],
  // Port labels for better identification
  "portsAttributes": {
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "notify"
    },
    "6379": {
      "label": "Valkey/Redis",
      "onAutoForward": "silent"
    },
    "8007": {
      "label": "Backend API",
      "onAutoForward": "notify"
    },
    "8099": {
      "label": "Frontend",
      "onAutoForward": "openBrowser"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "silent"
    }
  },
  // VS Code customizations
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "files.eol": "\n",
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "[php]": {
          "editor.tabSize": 4
        },
        "[typescript]": {
          "editor.tabSize": 2
        },
        "[typescriptreact]": {
          "editor.tabSize": 2
        },
        "[javascript]": {
          "editor.tabSize": 2
        },
        "git.autofetch": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.associations": {
          "*.blade.php": "blade",
          ".env*": "dotenv"
        },
        "files.exclude": {
          "**/node_modules": true,
          "**/vendor": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/vendor": true,
          "**/storage": true
        }
      },
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "xdebug.php-debug",
        "amiralizadeh9480.laravel-extra-intellisense",
        "onecentlin.laravel-blade",
        "shufo.vscode-blade-formatter",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "mikestead.dotenv",
        "editorconfig.editorconfig",
        "anthropic.claude-code"
      ]
    }
  },
  // Lifecycle scripts
  "postCreateCommand": "bash /workspace/.devcontainer/post-create.sh",
  "postStartCommand": "bash /workspace/.devcontainer/post-start.sh",
  // Container environment variables
  "containerEnv": {
    "COMPOSER_ALLOW_SUPERUSER": "1"
  },
  // Remote user
  "remoteUser": "www-data"
}