# Compose
COMPOSE_PROJECT_NAME=svc

# Mode
PROD_DOMAIN=domen.com
DEBUG_MODE=true
APP_ENVIRONMENT=local
APP_TIMEZONE=UTC

# App Keys
APP_KEY=

# App URLs
APP_URL=http://localhost:8007

# PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=app
DB_USERNAME=postgres
DB_PASSWORD=

# PGAdmin (dev only)
PGADMIN_EMAIL=admin@domen.com
PGADMIN_PASSWORD=

# Frontend
VITE_API_BASE_URL=/api/v1

# Rate Limiting: доверенные IP/CIDR без ограничений (внутренние сервисы Docker)
# Примеры: 127.0.0.1, 172.18.0.0/16, 10.89.0.0/16
RATE_LIMIT_TRUSTED_IPS=127.0.0.1,10.89.0.0/16

# Android build — URL API, вшиваемый в APK
# Варианты:
#   Через туннель:  http://IP:PORT/api/v1  (работает из любой сети)
#   Через LAN:      http://192.168.x.x:8099/api/v1 (только в локальной сети)
#   Production:     https://site.com/api/v1
ANDROID_API_URL=

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=
